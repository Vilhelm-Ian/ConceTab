{
  "manifest_version": 2,
  "name": "Tab Blocker",
  "version": "1.1",
  "description": "Manages tabs based on configured sites",
  "permissions": ["tabs", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Tab Blocker Settings"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
